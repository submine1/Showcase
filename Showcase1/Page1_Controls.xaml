                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="XAML CODE:" FontSize="11" Foreground="#FFAD776B"/>
                    <TextBlock FontSize="11" Margin="0,3,0,0" Foreground="#FF606060" Text="&lt;StackPanel&#160;Orientation=&quot;Horizontal&quot;&gt;&#x0a;&#160;&#160;&#160;&#160;&lt;ComboBox&#160;x:Name=&quot;ComboBox1&quot;&#160;DisplayMemberPath=&quot;Name&quot;&#160;SelectedValuePath=&quot;ImagePath&quot;&#160;VerticalAlignment=&quot;Top&quot;/&gt;&#x0a;&#160;&#160;&#160;&#160;&lt;Image&#160;Source=&quot;{Binding&#160;ElementName=ComboBox1,&#160;Path=SelectedValue}&quot;&#160;Width=&quot;60&quot;&#160;Height=&quot;60&quot;&#160;Margin=&quot;20,0,0,0&quot;/&gt;&#x0a;&lt;/StackPanel&gt;"/>
                </StackPanel>
            </Border>
            <TextBlock Text="ListBox" Margin="0,50,0,0" FontSize="26" Foreground="#FF414141"/>
